<VirtualHost *:80>
  ServerName <%= domain %>
  ServerAlias www.<%= domain %>
  ServerAdmin webmaster@<%= domain %>

  ## Vhost docroot
  DocumentRoot /var/rails_apps/<%= domain %>/current/public

  <Directory /var/rails_apps/<%= domain %>/current/public>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>
 
</VirtualHost>
